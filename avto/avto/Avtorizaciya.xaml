        mc:Ignorable="d"
        Title="Avtorizaciya" Height="411.876" Width="650.29" ResizeMode="NoResize">

    <Grid
			
			 Background="#FF740606" >
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="185*"/>
            <ColumnDefinition Width="431*"/>
        </Grid.ColumnDefinitions>
        <TextBox     Background="#FFF17D1D"           x:Name="FamKlient_textbox" Margin="13,8,13,9" Grid.Column="1" Grid.Row="1" />
        <PasswordBox	Background="#FFF17D1D"        x:Name="Pass_box" Grid.Column="1" Margin="13,10,198,11" Grid.Row="4" />
        <PasswordBox	Background="#FFF17D1D"   	 x:Name="ConfPass_Box" Grid.Column="1" Margin="13,10,198,11" Grid.Row="5" />
        <TextBox	    Background="#FFF17D1D"        x:Name="NameClient_textbox" Margin="13,8,13,9"  Grid.Column="1" />
        <TextBox	  	Background="#FFF17D1D"        x:Name="Otch_klient_Textbox" Margin="13,8,13,9"  Grid.Column="1" Grid.Row="2" />
        <TextBox        Background="#FFF17D1D"        x:Name="PhoneKlient_box" Margin="13,8,163,7" Grid.Column="1" Grid.Row="3" />
        <Label Content="Введите Имя:" HorizontalContentAlignment="Right" FontSize="19" VerticalContentAlignment="Center"  Grid.Column="0"/>
