        <Button	Background="#FFF17D1D"   	Grid.Row="7" HorizontalAlignment="Center"	VerticalAlignment="Center"		Content="Зарегистрироваться" x:Name="button2" Height="30" Width="300"  Click="button2_Click" Grid.ColumnSpan="2" />
        <TextBox Grid.Column="1" Background="#FFF17D1D"   	Grid.Row="6" Margin="13,10,198,11"		x:Name="Login_text" />
    </Grid>
</Window>
